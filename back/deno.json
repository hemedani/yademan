{
  "tasks": {
    "bc-dev": "ENV=development deno run -A --watch --watch-exclude=declarations --no-clear-screen ./mod.ts"
  },
  "fmt": {
    "files": {
      "exclude": [
        "declaration"
      ]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "semiColons": true,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "@da/bcrypt": "jsr:@da/bcrypt@^1.0.1",
    "@deps": "./deps.ts",
    "@lib": "./utils/mod.ts",
    "@model": "./models/mod.ts",
  },
  "nodeModulesDir": "auto"
}
